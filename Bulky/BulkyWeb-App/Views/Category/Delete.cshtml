@model Category //this is mean that when we submit the form an object of Category will created

<form method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>                            @*Here we used tag Helper "asp-for" to tell the form what this label mean*@
            <input asp-for="Name" type="text" class="form-control" readonly />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="number" class="form-control" readonly />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>

